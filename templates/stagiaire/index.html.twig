{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}
    <h1>Liste des stagiaires</h1>

    <a href="{{ path("add_stagiaire") }}">Ajouter un stagiaire</a>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for stagiaire in stagiaires %}
            <tr>
                <td><a href="{{ path("show_stagiaire",{'id': stagiaire.id}) }}">{{ stagiaire }}</a>  <a href="{{ path("edit_stagiaire",{'id': stagiaire.id}) }}">EDIT</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
