{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}

    <h1>Liste des formations</h1>

    <a href="{{ path("add_formation") }}">Ajouter une formation</a><br><br>
    <a href="{{ path("add_formateur") }}">Ajouter un formateur</a>

    <ul>
        {% for formation in formations %}
        <li>{{ formation }}<a href="{{ path("edit_formation",{'id': formation.id}) }}">EDIT</a></li>
        <ul>
            {% for session in formation.sessions %}
            <li><a href="{{ path("show_session",{'id': session.id}) }}">{{ session }}</a> ( {{ session.formateur }} ) <a href="{{ path("edit_session",{'id': session.id}) }}">EDIT</a></li>
            {% endfor %}
        </ul>
        {% endfor %}
    </ul>

{% endblock %}
